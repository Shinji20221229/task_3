<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <table class="table">
            <thead>
              <tbody>
                <tr>
                <th>name</th>
                <td></td>
                </tr>
              </tbody>
              <tbody>
                <tr>
                <th>introduction</th>
                <td></td>
                <th colspan="2"></th>
                </tr>
              </tbody>
            </thead>
          </table>
          <a href="user/edit">userbuttan</a>
        <h2>New book</h2>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
       <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <%= link_to book_path(book.id) do %>
            <% end %>
              <tr>
                <%= image_tag book.get_image %>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>