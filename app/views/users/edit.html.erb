<div>
  <%= flash[:notice] %>
</div>
<p class="notice"></p>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |user| %>
              <li><%= user %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
          <%= f.label :profile_image %><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %><br>
          <%= f.submit class:'btn btn-secondary' %><br>
        <% end %>
      </div>
    </div>
  </div>
